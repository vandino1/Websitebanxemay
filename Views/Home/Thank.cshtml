        p.thank{
            font-size: 35px;
            font-family: 'Times New Roman';
            font-weight: bold;
            padding-top: 80px;
            text-align: center;
        }
        a.continue{
            margin-left: 32px;
            font-size: 18px;
        }
    </style>
}

