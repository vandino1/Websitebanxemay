@model websitebanxemay.Models.Comment

@{
    ViewData["Title"] = "Xóa bình luận";
}
<div class="nav">
    <ol class="breadcrumb float-xl-left">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Trang chủ</a></li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
</div>
<h3>Bạn có chắc chắn muốn xóa bình luận này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.createDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.createDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mainContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.mainContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.starRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.starRating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Html.DisplayFor(model => model.Product.Image)" width="300" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="commentId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Trở lại danh sách</a>
    </form>
</div>
